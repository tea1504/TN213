@model IEnumerable<Website.EF.AnhNhaTro>

@{
    ViewBag.Title = "Hình ảnh nhà trọ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section Style {
    <link href="~/Content/FancyBox/fancybox.css" rel="stylesheet" />
    <link href="~/Content/css/AdminAnhNhaTroStyle.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/Content/FancyBox/fancybox.umd.js"></script>
    <script src="~/Content/ckfinder/ckfinder.js"></script>
    <script src="~/Scripts/js/AdminAnhNhaTroScript.js"></script>
}
@section breadcrumb{
    <div class="page-breadcrumb d-none d-md-flex align-items-center mb-3">
        <div class="breadcrumb-title pr-3">@ViewBag.Title</div>
        <div class="pl-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Dashboard", new { Area = "Admin" })"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
        <div class="ml-auto">
            <div class="btn-group">
                <btn class="btn btn-primary manager">Quản lý ảnh</btn>
            </div>
        </div>
    </div>
}

<div class="card">
    <div class="card-header">
        <div class="form-group">
            @Html.DropDownList("nhatro", (IEnumerable<SelectListItem>)ViewBag.list, "Tất cà nhà trọ", new { @class = "form-control" })
        </div>
    </div>
    <div class="card-body">
        <div id="container-img">
            @foreach (var item in Model)
            {
                <a href="@item.ten_anh"
                   data-fancybox
                   data-caption="@item.mota_anh"
                   class="hinhanh nt_@item.ma_nt">
                    <img src="@item.ten_anh" alt="@item.mota_anh" class="img-thumbnail" />
                </a>
            }
        </div>
    </div>
</div>
