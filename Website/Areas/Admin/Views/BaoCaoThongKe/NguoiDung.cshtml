@{
    ViewBag.Title = "Báo cáo thống kê người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section Style {
}
@section Scripts {
    <script src="~/Content/admin/assets/plugins/chartjs/js/Chart.min.js"></script>
    <script src="~/Scripts/js/BaoCaoThongKeNguoiDungScript.js"></script>
}
@section breadcrumb{
    <div class="page-breadcrumb d-none d-md-flex align-items-center mb-3">
        <div class="breadcrumb-title pr-3">@ViewBag.Title</div>
        <div class="pl-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Dashboard", new { Area = "Admin" })"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-6">
        <div class="card radius-15">
            <div class="card-body">
                <div class="card-title">
                    <h4 class="mb-0">
                        Số lượng người dùng theo giới tính
                    </h4>
                    <hr />
                </div>
                <canvas id="gioiTinhChart" width="400" height="200"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card radius-15">
            <div class="card-body">
                <div class="card-title">
                    <h4 class="mb-0">
                        Số lượng người dùng theo vai trò
                    </h4>
                    <hr />
                </div>
                <canvas id="vaiTroChart" width="400" height="200"></canvas>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="card radius-15">
            <div class="card-body">
                <div class="card-title">
                    <h4 class="mb-0">Top vi phạm</h4>
                    <hr />
                </div>
            </div>
            <canvas id="viPhamChart" width="400" height="200"></canvas>
            <div class="dashboard-top-countries">
                <ul class="list-group list-group-flush" id="cvp">
                    
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card radius-15">
            <div class="card-body">
                <div class="card-title">
                    <h4 class="mb-0">Top đóng góp</h4>
                    <hr />
                </div>
            </div>
            <canvas id="dongGopChart" width="400" height="200"></canvas>
            <div class="dashboard-top-countries">
                <ul class="list-group list-group-flush" id="cdg">
                    
                </ul>
            </div>
        </div>
    </div>
</div>
