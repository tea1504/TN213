@model IEnumerable<Website.EF.CoGia>

@{
    ViewBag.Title = "Xem thông tin giá phòng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Style {

}
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
@section breadcrumb{
    <div class="page-breadcrumb d-none d-md-flex align-items-center mb-3">
        <div class="breadcrumb-title pr-3">@ViewBag.Title</div>
        <div class="pl-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Dashboard", new { Area = "Admin" })"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
    </div>
}

<div class="card">
    <div class="card-header">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="card-body">
        <table id="myTable" class="table table-hover table-striped">
            <thead>
                <tr>
                    <th class="text-center">@Html.DisplayNameFor(m=>m.NhaTro.ma_nt)</th>
                    <th class="text-center">@Html.DisplayNameFor(m=>m.ma_nt)</th>
                    <th class="text-center">@Html.DisplayNameFor(m=>m.ma_lp)</th>
                    <th class="text-center">@Html.DisplayNameFor(m=>m.giaphong)</th>
                    <th class="text-center">@Html.DisplayNameFor(m=>m.ngay)</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
            {
                <tr>
                    <td>@item.ma_nt</td>
                    <td><a href="@Url.Action("Detail", "NhaTro", new { Area = "Admin", id = item.ma_nt })">@item.NhaTro.ten_nt</a></td>
                    <td>@item.LoaiPhong.ten_lp</td>
                    <td class="text-right">@Convert.ToDecimal(item.giaphong).ToString("#,##0")</td>
                    <td class="text-center">@item.ngay</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

