@model IEnumerable<Website.EF.KhuVuc>

@{
    ViewBag.Title = "Quản lý khu vực";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section Scripts {

}
@section Style {

}
@section breadcrumb{
    <div class="page-breadcrumb d-none d-md-flex align-items-center mb-3">
        <div class="breadcrumb-title pr-3">User Profile</div>
        <div class="pl-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Dashboard", new { Area = "Admin" })"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
    </div>
}

<div class="card">
    <div class="card-header">
        <h2 class="text-center">@ViewBag.title</h2>
    </div>
    <div class="card-body">
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th>Mã khu vực</th>
                    <th>Tên khu vực</th>
                    <th>Màu tượng trưng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ma_kv</td>
                        <td>@item.ten_kv</td>
                        <td>@item.ma_ms</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
