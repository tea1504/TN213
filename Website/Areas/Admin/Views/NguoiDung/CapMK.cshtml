@model IEnumerable<Website.EF.NguoiDung>

@{
    ViewBag.Title = "Cấp lại mật khẩu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Style {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/css/selectize.bootstrap3.min.css" integrity="sha256-ze/OEYGcFbPRmvCnrSeKbRTtjG4vGLHXgOqsyLFTRjg=" crossorigin="anonymous" />
}
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/js/standalone/selectize.min.js" integrity="sha256-+C0A5Ilqmu4QcSPxrlGpaZxJ04VjsRjKu+G82kl5UJk=" crossorigin="anonymous"></script>
    <script src="~/Scripts/js/AdminNguoiDungCapMKScript.js"></script>
}
@section breadcrumb{
    <div class="page-breadcrumb d-none d-md-flex align-items-center mb-3">
        <div class="breadcrumb-title pr-3">@ViewBag.Title</div>
        <div class="pl-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Dashboard", new { Area = "Admin" })"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
    </div>
}

<div class="card">
    <div class="card-header">
        <h2 class="text-center">
            @ViewBag.Title
        </h2>
    </div>
    <div class="card-body">
        <div class="form-group row">
            <label for="ma_nd" class="col-sm-2 col-form-label">Chọn tài khoản người dùng</label>
            <div class="col-sm-8">
                @Html.DropDownList("ma_nd", new SelectList(Model, "taikhoan", "taikhoan"), "", new { @class = "form-control", @placeholder = "Chọn tài khoản..." })
            </div>
            <div class="col-sm-2">
                <button class="btn btn-light-warning btn-block" id="btn-reset">Cấp lại mật khẩu</button>
            </div>
        </div>
    </div>
</div>
