@model Website.EF.TruongHoc

@{
    ViewBag.Title = Model.ten_th;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section Style {
    <link href="~/Content/css/AdminTruongHocDetailStyle.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/Scripts/js/AdminTruongHocDetailScript.js"></script>
}
@section breadcrumb{
    <div class="page-breadcrumb d-none d-md-flex align-items-center mb-3">
        <div class="breadcrumb-title pr-3">@ViewBag.Title</div>
        <div class="pl-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Dashboard", new { Area = "Admin" })"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "TruongHoc", new { Area = "Admin" })">Quản lý trường học</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
    </div>
}

@Html.Hidden("lat", Model.toado_th.YCoordinate)
@Html.Hidden("lng", Model.toado_th.XCoordinate)

<div class="card radius-10">
    <div class="card-body">
        <div class="card-title">
            <h4 class="mb-0">Thông tin trường học</h4>
            <hr />
        </div>
        <table width="100%" cellspacing="20" cellpadding="20">
            <tr>
                <th width="20%">@Html.DisplayNameFor(m => m.ten_th) :</th>
                <td>@Model.ten_th</td>
            </tr>
            <tr>
                <th width="20%">@Html.DisplayNameFor(m => m.diachi_th) :</th>
                <td>@Model.diachi_th</td>
            </tr>
            <tr>
                <th width="20%">@Html.DisplayNameFor(m => m.ma_kv) :</th>
                <td>@Model.KhuVuc.ten_kv</td>
            </tr>
        </table>
    </div>
</div>

<div class="card radius-10">
    <div class="card-body">
        <div class="card-title">
            <h4 class="mb-0">Bản đồ</h4>
            <hr />
        </div>
        <div id="zoomcontrol">
            <div id="map"></div>
        </div>
    </div>
</div>
