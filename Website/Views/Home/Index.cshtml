@model IEnumerable<Website.EF.KhuVuc>
@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
@using Website.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
