@model Website.Models.RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edukon</title>
    <link rel="shortcut icon" href="~/Content/user/assets/images/x-icon.png" type="image/x-icon">

    <link rel="stylesheet" href="~/Content/user/assets/css/animate.css">
    <link rel="stylesheet" href="~/Content/user/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/user/assets/css/icofont.min.css">
    <link rel="stylesheet" href="~/Content/user/assets/css/swiper.min.css">
    <link rel="stylesheet" href="~/Content/user/assets/css/lightcase.css">
    <link rel="stylesheet" href="~/Content/user/assets/css/style.css">
    <style>
        html, body {
            height: 100%;
        }
    </style>
</head>
<body>

    <!-- preloader start here -->
    <div class="preloader">
        <div class="preloader-inner">
            <div class="preloader-icon">
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- preloader ending here -->
    <!-- Login Section Section Starts Here -->
    <div class="login-section padding-tb section-bg h-100">
        <div class="container">
            <div class="account-wrapper">
                <h3 class="title">Đăng ký tài khoản</h3>
                @using (Html.BeginForm("DangKy", "Register", FormMethod.Post, new { @class = "account-form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.holot_nd, new { @placeholder = "Họ lót" })
                        <div>
                            <small>@Html.ValidationMessageFor(m => m.holot_nd, "", new { @class = "text-danger" })</small>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.ten_nd, new { @placeholder = "Tên" })<div>
                            <small>@Html.ValidationMessageFor(m => m.ten_nd, "", new { @class = "text-danger" })</small>
                        </div>
                    </div>
                    <div class="form-check form-check-inline">
                        @Html.RadioButtonFor(m => m.gioitinh_nd, 1, new { @class = "form-check-input", id = "gioitinh_nd1", @checked = "checked" })
                        <label class="form-check-label" for="gioitinh_nd1">Nam</label>
                    </div>
                    <div class="form-check form-check-inline">
                        @Html.RadioButtonFor(m=>m.gioitinh_nd, 0, new { @class = "form-check-input", id= "gioitinh_nd2" })
                        <label class="form-check-label" for="gioitinh_nd2">Nữ</label>
                    </div>
                    <div class="form-group mt-2">
                        @Html.TextBoxFor(m => m.taikhoan, new { @placeholder = "Tài khoản" })
                        <div>
                            <small>@Html.ValidationMessageFor(m => m.taikhoan, "", new { @class = "text-danger" })</small>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.matkhau, new { @placeholder = "Mật khẩu" })
                        <div>
                            <small>@Html.ValidationMessageFor(m => m.matkhau, "", new { @class = "text-danger" })</small>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Confirmpwd, new { @placeholder = "Nhập lại khẩu" })
                        <div>
                            <small>@Html.ValidationMessageFor(m => m.Confirmpwd, "", new { @class = "text-danger" })</small>
                        </div>
                    </div>
                    <div class="">
                        <input class="form-check-input" type="checkbox" id="ma_vt" name="ma_vt" value="2">
                        <label class="form-check-label" for="ma_vt">Tôi là chủ nhà trọ</label>
                    </div>
                    <div class="form-group text-center">
                        <button class="d-block lab-btn"><span>Đăng ký</span></button>
                    </div>
                }
                <div class="account-bottom">
                    <span class="or"><span>or</span></span>
                    <h5 class="subtitle">Login With Social Media</h5>
                    <ul class="lab-ul social-icons justify-content-center">
                        <li>
                            <a href="#" class="facebook"><i class="icofont-facebook"></i></a>
                        </li>
                        <li>
                            <a href="#" class="twitter"><i class="icofont-twitter"></i></a>
                        </li>
                        <li>
                            <a href="#" class="linkedin"><i class="icofont-linkedin"></i></a>
                        </li>
                        <li>
                            <a href="#" class="instagram"><i class="icofont-instagram"></i></a>
                        </li>
                        <li>
                            <a href="#" class="pinterest"><i class="icofont-pinterest"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Login Section Section Ends Here -->



    <script src="~/Content/user/assets/js/jquery.js"></script>
    <script src="~/Content/user/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/user/assets/js/swiper.min.js"></script>
    <script src="~/Content/user/assets/js/progress.js"></script>
    <script src="~/Content/user/assets/js/lightcase.js"></script>
    <script src="~/Content/user/assets/js/counter-up.js"></script>
    <script src="~/Content/user/assets/js/isotope.pkgd.js"></script>
    <script src="~/Content/user/assets/js/functions.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
