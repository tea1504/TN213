@model Website.EF.NguoiDung

@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@section style{
    <style>
        label {
            margin: 7px 0 5px 0;
        }
    </style>
}
@section scripts{
    <script src="~/Scripts/js/EditUserScript.js"></script>
}
@section  breadcrumb{
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { Area = "" })">Home</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "User", new { Area = "" })">@Model.holot_nd @Model.ten_nd</a></li>
    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
}

<!-- instructor Single Section Starts Here -->
<section class="instructor-single-section padding-tb section-bg">
    <div class="container">
        <div class="instructor-wrapper">
            <div class="instructor-single-top">
                <div class="instructor-single-item d-flex flex-wrap justify-content-between">
                    <div class="instructor-single-thumb">
                        <img src="@Model.anh_nd" id="preview-img" alt="instructor">
                    </div>
                    <div class="instructor-single-content">
                        <h3 class="subtitle">Nhập thông tin</h3>
                        @using (Html.BeginForm("Edit", "User", new { Area = "" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()
                            @Html.HiddenFor(m => m.ma_nd);
                            <div class="form-group">
                                @Html.LabelFor(m => m.holot_nd)
                                @Html.TextBoxFor(m => m.holot_nd, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ten_nd)
                                @Html.TextBoxFor(m => m.ten_nd, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.gioitinh_nd)
                                @if (Model.gioitinh_nd == 0)
                                {
                                    <select name="gioitinh_nd" id="gioitinh_nd" class="form-control">
                                        <option value="1">Nam</option>
                                        <option value="0" selected>Nữ</option>
                                    </select>
                                }
                                else
                                {
                                    <select name="gioitinh_nd" id="gioitinh_nd" class="form-control">
                                        <option value="1" selected>Nam</option>
                                        <option value="0">Nữ</option>
                                    </select>
                                }
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.sdt_nd)
                                @Html.TextBoxFor(m => m.sdt_nd, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.email)
                                @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.diachi)
                                @Html.TextBoxFor(m => m.diachi, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Ảnh</label>
                                <input type="file" name="imgInput" id="imgInput" class="form-control"/>
                            </div>
                            <button class="btn btn-success mt-3">Cập nhật</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- instructor Single Section Ends Here -->
